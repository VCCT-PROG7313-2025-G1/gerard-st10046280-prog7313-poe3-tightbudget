<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TightBudget" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/primary_purple_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="Theme.TightBudget" parent="Base.Theme.TightBudget" />
</resources>